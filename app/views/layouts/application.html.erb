<!DOCTYPE html>
<html>
<head>
  <title>Kristina and Jordan's Wedding</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  
      <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/animate.css/3.1.1/animate.min.css" rel="stylesheet" />

<link href='http://fonts.googleapis.com/css?family=Parisienne|Bitter|Lato:300,400' rel='stylesheet' type='text/css'>
  
</head>
<body >


 <nav class="navbar navbar-trans navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapsible">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <% if current_page?(root_path) %>
            	<%= link_to "Home",  root_path, style: "font-family:Bitter;color:#337ab7;background-color:#999", class: "navbar-brand" %>
            <% else %>
             	<%= link_to "Home",  root_path, style: "font-family:Bitter;", class: "navbar-brand" %>
             <% end %>
            </div>
        <div class="navbar-collapse collapse" id="navbar-collapsible">
            <ul class="nav navbar-nav navbar-left">
           		 <li class="<%= 'active' if current_page?(story_path) %>">
					<%= link_to "Our Story",  story_path, style: "font-family:Bitter"  %>	
				</li>
                 <li class="<%= 'active' if current_page?(info_path) %>">
                 <%= link_to "Guest Information",  info_path, style: "font-family:Bitter" %>	
                 </li>
 				<li class="<%= 'active' if current_page?(party_path) %>">
                 <%= link_to "Wedding Party",  party_path, style: "font-family:Bitter" %>	
                 </li>
                  <li class="<%= 'active' if current_page?(insta_path) %>">
                 <%= link_to "#FallingHeadOverHills",  insta_path, style: "font-family:Bitter" %>	
                 </li>
                <li>&nbsp;</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li> <%= link_to love_path do %>
                 <i class="fa fa-heart-o fa-lg"></i>
                 <% end %>
            </li>
            </ul>
        </div>
    </div>
</nav>


<%= yield %>


    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>


</body>
</html>
